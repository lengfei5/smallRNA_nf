params {
    outdir    = "."
    reads     = "ngs_raw/*.bam"
    adapter   = "AGATCGGAAGAGCACACGTCTGAACTCCAGTCACNNNNNNATCTCGTATGCCGTCTTCTGCTTG"
    adapterER = 0.1
    minLength = 18
    maxLength = 30 //turn off with -1
    minAlign  = 18
    genome    = "$baseDir/genome/WBcel235.fa"
    contamination = "none"
    gtf = "$baseDir/annotation/WBcel235.mirBase.gtf"
    gtfNoSplit = "$baseDir/annotation/cel_ens_piRNA.gtf"
    tailFraction = 0.12
    cpus = 8
    memPerCPUSort = '3G'
}


process {

    errorStrategy = 'retry'
    maxRetries = 3

    $buildTailorIndex {
        memory = { 16.GB * task.attempt }
    }

    $alignContamination {
        cpus = "${params.cpus}"
    }

    $align {
        cpus = "${params.cpus}"
    }

}


profiles {

    standard {

        process {

            executor = 'slurm'
            clusterOptions = '--qos=short'
            scratch = true

            $assignFeat {

                clusterOptions = {
                    if ( task.attempt == 1 ) {
                        '--qos=medium'
                    } else {
                        '--qos=long'
                    }
                }
            }
        }
    }

    sge {
        process.executor = 'sge'
        process.queue = 'public.q'
        process.penv = 'smp'
    }

    local {
        process.executor = 'local'
    }
}
